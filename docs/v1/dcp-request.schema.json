{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bkryszewski.github.io/decision-context-protocol/v1/dcp-request.schema.json",
  "title": "Decision Context Protocol v1 - Request",
  "type": "object",
  "required": [
    "action",
    "actor_identity",
    "execution_identity",
    "context"
  ],
  "properties": {
    "action": {
      "type": "object",
      "required": ["verb", "resource"],
      "properties": {
        "verb": {
          "type": "string",
          "minLength": 1
        },
        "resource": {
          "type": "string",
          "minLength": 1
        },
        "parameters": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "actor_identity": {
      "type": "string",
      "minLength": 1,
      "description": "Identity of the entity that formed the intent"
    },
    "execution_identity": {
      "type": "string",
      "minLength": 1,
      "description": "Identity under which the action would execute"
    },
    "context": {
      "type": "object",
      "required": ["signals"],
      "properties": {
        "signals": {
          "type": "object",
          "additionalProperties": true
        },
        "evidence_refs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "freshness": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "temporal_scope": {
      "type": "object",
      "properties": {
        "deadline": {
          "type": "string",
          "format": "date-time"
        },
        "validity_window": {
          "type": "string",
          "description": "ISO-8601 duration"
        }
      }
    }
  },
  "additionalProperties": false
}
