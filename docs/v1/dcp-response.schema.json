{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://bkryszewski.github.io/decision-context-protocol/v1/dcp-response.schema.json",
  "title": "Decision Context Protocol v1 - Response",
  "type": "object",
  "required": [
    "decision",
    "decision_id",
    "valid_until"
  ],
  "properties": {
    "decision": {
      "type": "string",
      "enum": ["ALLOW", "DENY", "ESCALATE", "CONSTRAIN"]
    },
    "decision_id": {
      "type": "string",
      "minLength": 1
    },
    "rationale_ref": {
      "type": "string"
    },
    "valid_until": {
      "type": "string",
      "format": "date-time"
    },
    "constraints": {
      "type": "object",
      "description": "Present only when decision is CONSTRAIN",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
